<%= question.user.name %>
<%= question.title %>
<%= attachment_image_tag question, :question_image %>
<%= question.content %>
<%= question.reword_point %>
<% if question.current_user?(current_user) %>
  <%= render "questions/accepting", question: @question %>
  <% unless question.answers.where(best_answer: 1) %>
    <%= link_to "削除", question_path(question.id), method: :delete %>
  <% end %>
  <%= link_to "編集", edit_question_path(question.id) %>
<% end %>