<div class="container my-5">
  <div class="row">
    <div class="col-4">
      <h2 class="mb-4">ユーザー情報</h2>
      <%= render "users/info", user: @user %>
    </div>
    <div class="col-8">
      <h2 class="mb-4">履歴</h2>
      <div>
        <span><%= link_to "質問履歴", user_index_of_questions_path(@user.id), remote: true %></span>
        <span>|</span>
        <span><%= link_to "回答履歴", user_index_of_answers_path(@user.id), remote: true %></span>
      </div>
      <div class="question-index">
        <%= render "questions/index", questions: @user.questions %>
      </div>
      <!--回答履歴ajax-->
      <div class="answer-index">
        
      </div>
    </div>
  </div>
</div>


