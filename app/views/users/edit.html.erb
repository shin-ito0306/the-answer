<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-5">
      <h2 class="border-bottom mb-4">ユーザー編集</h2>
      <%= form_with model:@user, local: true do |f| %>
        <%= render "layouts/error_message", object: @user %>

        <div class="form-group">
          <h4>名前</h4>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <h4>プロフィール画像</h4>
          <%= f.attachment_field :user_image %>
        </div>

        <div class="form-group">
          <h4>自己紹介</h4>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>

        <%= f.submit "投稿", class: "btn btn-primary col" %>
      <% end %>
      <%= link_to '退会する', user_unsubscribe_path(current_user), class: "btn btn-danger col mt-3" %>
    </div>
  </div>
</div>