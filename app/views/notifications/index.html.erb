<h4>通知</h4>
<% if @notifications.exists? %>
  <% @notifications.each do |notification| %>
    <%= attachment_image_tag notification.visiter, :user_image, :fill, 100, 100, format: 'jpeg', fallback:"unnamed.png", size:'100x100' %>

    <% case notification.action %>
      <% when 'answer' then %>
        <%= link_to "#{notification.visiter.name}", question_path(notification.question_id) %>
        <span>が回答しました</span>
      <% when 'best' then %>
        <%= link_to "#{notification.question.title}", question_path(notification.question_id) %>
        <span>での回答がベストアンサーに選ばれました</span>
    <% end %>

  <% end %>
<% else %>
  <p>通知がありません</p>
<% end %>