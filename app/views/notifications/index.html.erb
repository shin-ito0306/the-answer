

<div class="container">
    <h3>通知</h3>
        <% if @notifications.exists? %>
          <% @notifications.each do |notification| %>
            <div class="row text-center border-bottom">
              <div class="col-4 my-3">
                <%= attachment_image_tag notification.visiter, :user_image, :fill, 100, 100, format: 'jpeg', fallback:"unnamed.png", size:'100x100' %>
              </div>
              <div class="col-8 d-flex align-items-center">
                <%= link_to "#{notification.visiter.name}", user_path(notification.visiter.id), class: "text-truncate", style: "max-width: 200px" %>
                <% case notification.action %>
                <% when 'answer' %>
                  <span>が回答しました</span>
                <% when 'best' %>
                  <span>からベストアンサーに選ばれました</span>
                <% end %>
                <span class="ml-4"><%= link_to "#{notification.question.title}", question_path(notification.question_id), class: "text-truncate", style: "max-width: 200px" %></span>
              </div>
            </div>
          <% end %>
        <% else %>
          <p>通知がありません</p>
        <% end %>
</div>

